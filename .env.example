# ============================================================
# Athena Research Agent — Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git
# ============================================================

# ── Gemini AI (required) ────────────────────────────────────
# Get your free key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSy_your_key_here

# ── Security (required — change this!) ───────────────────────
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-long-random-secret-key

# ── App settings (optional) ──────────────────────────────────
DEBUG=false
APP_NAME=Athena Research Agent

# ── Gemini model settings (optional) ─────────────────────────
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.2

# ── Database (optional — defaults to local SQLite) ────────────
# For SQLite (default, great for local/small deployments):
DATABASE_URL=sqlite+aiosqlite:///./athena.db

# For PostgreSQL (production with Railway/Render/Supabase):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/athena

# ── JWT settings (optional) ──────────────────────────────────
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080   # 7 days

# ── Limits (optional) ────────────────────────────────────────
MAX_REPORTS_PER_USER=100
